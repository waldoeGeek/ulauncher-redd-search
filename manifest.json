{
  "required_api_version": "^2.0.0",
  "name": "Reddit extension",
  "description": "Search Reddit",
  "developer_name": "waldoeGeek",
  "icon": "images/icon.png",
  "options": {
    "query_debounce": 0.1
  },
  "preferences": [
    {
      "id": "kw",
      "type": "keyword",
      "name": "Reddit Search",
      "description": "Search Reddit",
      "default_value": "rt"
    },
    {
      "id": "rtu_kw",
      "type": "keyword",
      "name": "Reddit User Search",
      "default_value": "rtu"
    },
    {
      "id": "rtr_kw",
      "type": "keyword",
      "name": "Reddit Subreddit Search",
      "default_value": "rtr"
    },
    {
  		"id": "show_thumbnails",
  		"type": "select",
  		"name": "Show thumbnails",
  		"description": "will add time to load",
  		"options": ["true", "false"],
  		"default_value": "true"
	  },
    {
     "id": "max_results",
     "type": "input",
     "name": "Maximum results results to display",
     "default_value": "4"
    },
    {
    "id": "result_types",
    "type": "select",
    "name": "result types",
    "description": "Choose to search everything, subs, or users",
    "options": ["all", "sub", "user"],
    "default_value": "all"
    }
  ]
}
